{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lightning Player",
  "version": "0.1.0",
  "identifier": "i54cxy.lightingplayer",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "decorations": false,
        "dragDropEnabled": false,
        "height": 600,
        "minWidth": 200,
        "width": 800
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      },
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": ["icons/icon.ico"],
    "targets": "all"
  }
}
